
<center>
<h1>Tasks</h1><br/><br/>

<table class="table table-striped table-dark" id="table">
  <thead>
    <tr class="table-primary" style="color:black;"> 
  
      <th scope="col">Name</th>
      <th scope="col">Status</th>
      <th scope="col">Content</th>
       <th scope="col">Priority</th>
        <th scope="col">Start date</th>
         <th scope="col">End date</th>
         <th scope="col">User</th>
         <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.status %></td>
        <td><%= task.content %></td>
        <td><%= task.prior %></td>
        <td><%= task.start_date %></td>
        <td><%= task.end_date %></td>
        <td>
          <%= link_to 'Show', task, class:"btn btn-success" %>
          <%= link_to 'Edit', edit_task_path(task), class:"btn btn-primary" %>
          <%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %>
        </td>
      </tr>
      <% end %>
  </tbody>
</table>
<%= paginate @tasks %>
</center>



